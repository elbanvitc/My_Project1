<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appointment_layout_tv_num_of_players_of_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 11 VS 11"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/appointment_layout_tv_end_of_appointment"
            app:layout_constraintStart_toEndOf="@+id/appointment_layout_tv_start_of_appointment"
            app:layout_constraintTop_toBottomOf="@+id/appointment_layout_tv_date_of_appointment"
            app:layout_constraintVertical_bias="0.077" />

        <ImageView
            android:id="@+id/appointment_layout_iv_capten1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_profile_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13" />

        <ImageView
            android:id="@+id/appointment_layout_iv_capten2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_profile_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13" />

        <ImageView
            android:id="@+id/appointment_layout_iv_stadium"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_stadium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.01" />

        <TextView
            android:id="@+id/appointment_layout_tv_stadium_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  staduim name  "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_layout_iv_stadium"
            app:layout_constraintVertical_bias="0.123" />

        <TextView
            android:id="@+id/appointment_layout_tv_date_of_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:text=" 14 / 8 / 1999  "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_layout_iv_share_stadium_location"
            app:layout_constraintVertical_bias="0.104" />

        <TextView
            android:id="@+id/appointment_layout_tv_capten1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="k/ name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_layout_iv_capten1"
            app:layout_constraintVertical_bias="0.247" />

        <TextView
            android:id="@+id/appointment_layout_tv_start_of_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from 23 : 30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_layout_tv_date_of_appointment"
            app:layout_constraintVertical_bias="0.077" />

        <TextView
            android:id="@+id/appointment_layout_tv_end_of_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   to 23 : 30  "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_layout_tv_date_of_appointment"
            app:layout_constraintVertical_bias="0.077" />

        <TextView
            android:id="@+id/appointment_layout_tv_capten2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="k/ name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_layout_iv_capten2"
            app:layout_constraintVertical_bias="0.247" />

        <ImageView
            android:id="@+id/appointment_layout_iv_share_stadium_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_map_location_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/appointment_layout_tv_capten2_name"
            app:layout_constraintHorizontal_bias="0.788"
            app:layout_constraintStart_toEndOf="@+id/appointment_layout_tv_capten1_name"
            app:layout_constraintTop_toBottomOf="@+id/appointment_layout_tv_stadium_name"
            app:layout_constraintVertical_bias="0.178" />

        <TextView
            android:id="@+id/appointment_layout_tv_stadium_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            app:layout_constraintBottom_toBottomOf="@+id/appointment_layout_tv_num_of_players_of_appointment"
            app:layout_constraintEnd_toStartOf="@+id/appointment_layout_iv_share_stadium_location"
            app:layout_constraintHorizontal_bias=".35"
            app:layout_constraintStart_toEndOf="@+id/appointment_layout_tv_capten1_name"
            app:layout_constraintTop_toBottomOf="@+id/appointment_layout_tv_stadium_name"
            app:layout_constraintVertical_bias="0.18" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>